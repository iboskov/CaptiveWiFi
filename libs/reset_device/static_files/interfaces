auto lo
iface lo inet loopback

iface usb0 inet static
    address 192.168.7.2
    netmask 255.255.255.252
    network 192.168.7.0
    gateway 192.168.7.1

auto wlan0
allow-hotplug wlan0
iface wlan0 inet static
    address=10.0.0.1
    network=10.0.0.0
    broadcast=10.0.0.255
    netmask=255.255.255.0
